{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/mcp.schema.json",
  "name": "requesthunt",
  "version": "1.2.2",
  "description": "MCP server for RequestHunt - search feature requests from Reddit, X, and GitHub",
  "tools": [
    {
      "name": "search_requests",
      "description": "Search feature requests from Reddit, X, and GitHub. Use expand=true to enable AI topic expansion and realtime scraping for better results.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (e.g., 'dark mode', 'offline support')"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 20,
            "description": "Maximum results to return (1-100)"
          },
          "expand": {
            "type": "boolean",
            "default": false,
            "description": "Enable AI topic expansion + realtime scraping when cached results are insufficient"
          },
          "platforms": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["reddit", "x", "github"]
            },
            "description": "Platforms to search (only used when expand=true)"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "list_requests",
      "description": "List feature requests with optional filters. Use source='realtime' to trigger live scraping.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "Filter by topic (e.g., 'Notion', 'VS Code', 'kanban')"
          },
          "category": {
            "type": "string",
            "description": "Filter by category slug (e.g., 'productivity', 'developer-tools')"
          },
          "platform": {
            "type": "string",
            "enum": ["x", "reddit", "github", "requesthunt"],
            "description": "Filter by source platform"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 20,
            "description": "Maximum results (1-100)"
          },
          "source": {
            "type": "string",
            "enum": ["cached", "realtime"],
            "default": "cached",
            "description": "Data source - 'realtime' triggers live scraping"
          },
          "sortBy": {
            "type": "string",
            "enum": ["new", "top"],
            "default": "new",
            "description": "Sort order"
          }
        }
      }
    },
    {
      "name": "get_topics",
      "description": "List available topics organized by category. Use these topics to filter feature requests.",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "scrape_requests",
      "description": "Start an on-demand scrape job to collect fresh feature requests from Reddit, X, and GitHub. Counts against realtime API quota.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Topic to scrape (e.g., 'graphene battery', 'AI code review')"
          },
          "platforms": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["reddit", "x", "github"]
            },
            "description": "Platforms to scrape (default: all)"
          },
          "wait": {
            "type": "boolean",
            "default": true,
            "description": "Wait for job completion (default: true, max 2 min)"
          }
        },
        "required": ["topic"]
      }
    }
  ],
  "prompts": [
    {
      "name": "discover-requests",
      "description": "Discover relevant feature requests for a product or topic",
      "arguments": [
        {
          "name": "topic",
          "description": "Product or topic name (e.g., 'Notion', 'VS Code')",
          "required": true
        },
        {
          "name": "expand",
          "description": "Enable AI topic expansion (true/false, default: true)",
          "required": false
        }
      ]
    },
    {
      "name": "analyze-trends",
      "description": "Analyze patterns and trends in feature requests for a topic",
      "arguments": [
        {
          "name": "topic",
          "description": "Topic to analyze",
          "required": true
        },
        {
          "name": "platforms",
          "description": "Comma-separated platforms (reddit,x,github) or 'all'",
          "required": false
        }
      ]
    },
    {
      "name": "compare-platforms",
      "description": "Compare feature requests across Reddit, X, and GitHub",
      "arguments": [
        {
          "name": "topic",
          "description": "Topic to compare",
          "required": true
        },
        {
          "name": "limit",
          "description": "Results per platform (default: 10)",
          "required": false
        }
      ]
    },
    {
      "name": "find-quick-wins",
      "description": "Identify frequently requested features that could be quick wins",
      "arguments": [
        {
          "name": "topic",
          "description": "Product or topic name",
          "required": true
        },
        {
          "name": "sortBy",
          "description": "Sort preference (top/new, default: top)",
          "required": false
        }
      ]
    }
  ],
  "resources": [
    {
      "uri": "topics://list",
      "name": "Available Topics",
      "description": "List of all topics organized by category",
      "mimeType": "application/json"
    },
    {
      "uri": "guide://getting-started",
      "name": "Getting Started Guide",
      "description": "Quick start guide with examples",
      "mimeType": "text/markdown"
    },
    {
      "uri": "examples://queries",
      "name": "Example Queries",
      "description": "Example queries for common use cases",
      "mimeType": "application/json"
    },
    {
      "uri": "stats://limits",
      "name": "API Rate Limits",
      "description": "API rate limits and usage information",
      "mimeType": "application/json"
    }
  ]
}

